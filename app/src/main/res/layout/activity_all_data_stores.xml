<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage2"
    tools:context=".MainPage">


    <ImageView
        android:layout_width="144dp"
        android:layout_height="146dp"
        android:layout_alignBottom="@+id/Recyclermain22"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="576dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/alldatastores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="595dp"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24_white"
        android:text="All Stores"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recyclermain22"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="3dp"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />





</RelativeLayout>